package es.david.ptctest;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.fasterxml.jackson.databind.ObjectMapper;
import com.fasterxml.jackson.databind.ObjectWriter;

@Path("/ptc")
public class PTCResources {
	Integer x = 0;
	@GET
	@Produces(MediaType.TEXT_PLAIN)
	public String sayPlainTextHello() {
		Ejemplo example = new Ejemplo();
		example.x = 2;
		example.y = 5;
		ObjectWriter om = new ObjectMapper().writer().withDefaultPrettyPrinter();
		return "Solo queria decirte que te quiero con locura y que me haces la persona mas feliz del mundo!! <3";
	}
		
	private class Ejemplo {
		public int x;
		public int y;
	}
}
